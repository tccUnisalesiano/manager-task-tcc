{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}

<div class="row d-flex align-items-center justify-content-center h-100">
    <div class="col-md-10 col-lg-10 col-xl-10 offset-xl-1">
            {% for flash_error in app.flashes('reset_password_error') %}
                <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
            {% endfor %}
            <div class="card-header">
                <h3>Restaurar Senha</h3>
            </div>

                <div class="row">
                    <div class="col-lg-4 ">
                        {{ form_start(requestForm) }}
                        {{ form_row(requestForm.email, {'attr': {'class': 'camposInput'}}) }}
                        <div>
                            <small>
                                Insira seu e-mail para receber um link para criar sua nova senha
                            </small>
                        </div>
                        <button class="btn btn-primary">Enviar para email</button>
                        {{ form_end(requestForm) }}
                    </div>
                </div>
    </div>
</div>

{% endblock %}




