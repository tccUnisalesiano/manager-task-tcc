{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

<form method="post">{{ form_start(registrationForm) }}
    <div class="container mt-5">
        <div class="row d-flex justify-content-center">
            <div class="col-md-6">
                <h1 class="h3 mb-3 font-weight-normal">Cadastrar Usuário</h1>
            </div>
            <div class="col-md-4">
                <label title="Email" for="Email">E-Mail</label>
                <input type="text" name="email" title="Email" value="{{ registrationForm.email }}" required/>
            </div>
            <div class="col-md-4">
                <label title="Senha" for="Senha">Senha</label>
                <input type="password" name="plainPassword" title="Senha" required value="{{ registrationForm.plainPassword }}"/>
            </div>
            <div class="col-md-4">
                <label title="AgreeTerms" for="AgreeTerms">Aceita os Termos e Condições?</label>
                <input type="checkbox" name="agreeTerms" title="AgreeTerms" value="{{ registrationForm.agreeTerms }}" required/>
            </div>
            <button type="submit" class="btn btn-success">Register</button>
        </div>
    </div>
    {{ form_end(registrationForm) }}
</form>
{% endblock %}
