{% extends 'base.html.twig' %}
{% block body %}
    <div class="col-lg-12" style="margin-top: 15px;">
        <div class="form-group" style="float: right; margin: 0 ">
            <a class="btn btn-primary" href="{{ path('cadastroValorFuncionario') }}">Cadastrar Valor</a>
        </div>
    </div>
    <table class="table table-hover table-striped table-dataTables">
        <thead>
        <tr>
            <th>Funcionário</th>
            <th>Valor/Hora</th>
            <th>Data Inicio</th>
            <th>Data Fim</th>
            <th>Ações</th>
        </tr>
        </thead>
        {% for valor in valorfuncionario %}
            <tbody>
            <tr>
                <td>{{ valor.idUser.nome }}</td>
                <td>{{ valor.valorHora }}</td>
                <td>{{ valor.dataIni is null ? "" : valor.dataIni|date('d-m-Y') }}</td>
                <td>{{ valor.dataFim is null ? "" : valor.dataFim|date('d-m-Y') }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('editarValorFuncionario', {id: valor.id }) }}"
                       title="Editar"><i class="fa-solid fa-pen edit"></i></a>
                    <a class="btn btn-danger" href="{{ path('deleteValorFuncionario', {id: valor.id }) }}"
                       title="Excluir"><i class="fa-solid fa-trash delete"></i></a>
                </td>
            </tr>
            </tbody>
        {% endfor %}
    </table>

    <script src="{{ asset('styles/JS/dados.js') }}"></script>
{% endblock %}