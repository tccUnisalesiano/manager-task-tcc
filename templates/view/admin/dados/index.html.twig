    <script>
        $(document).ready(function () {
                //get ID
                $.ajax({
                    type: 'POST',
                    url: '/dashboard/session',
                    dataType: 'JSON',
                    success: function (response) {
                        response.forEach((resp) => {
                            console.log(resp.id);
                            $('#getIdSession').val(resp.id);
                            getProjetosByid(resp.id);
                        });
                    }
                });
        });

        function getProjetosByid(id) {
            $.ajax({
                type: 'POST',
                url: 'tratamentodados/projetos',
                dataType: 'JSON',
                data: {id: id},
                success: function (response) {
                    $('.filtroProj').remove();
                    response.response.forEach((resp) => {
                        $("#tblprojetos").append
                        (`<tr class="filtroProj">
                            <td> ${resp.id} </td>
                            <td> ${resp.nome} </td>
                            <td> ${resp.situacao} </td>
                        </tr>`);
                    });
                }, error: function (resp) {
                    console.log(resp);
                }
            })
        }

