{% extends 'base.html.twig' %}
{% block body %}
    {% include 'include/admin_navbar.html.twig' %}
    <section class="home">
        {% include 'include/navbar_top.html.twig' %}
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header">
                            <h4>Projetos</h4>
                        </div>
                        <div class="card-body">
                            <table class="table table-hover table-striped">
                                <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Projeto</th>
                                    <th>Situação</th>
                                    <th>Descrição</th>
                                </tr>
                                </thead>
                                <tbody id="tblprojetos">
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <div class="col-lg-3 mt-3">
                    <div class="card">
                        <div class="card-header">
                            <h4>Geral</h4>
                        </div>
                        <div class="card-body">
                            <canvas id="graphPieDadosAdmin" width="300" height="150"></canvas>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 mt-3">
                    <div class="card">
                        <div class="card-header">
                            <h4>Custo de Projeto</h4>
                        </div>
                        <div class="card-body">
                            <canvas id="bar-chart" width="800" height="367"></canvas>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 mt-3">
                    <div class="card">
                        <div class="card-header">
                            <h4>Colaboradores</h4>
                        </div>
                        <div class="card-body">
                            <canvas id="graphUsers" width="300" height="150"></canvas>
                        </div>
                    </div>
                </div>
            </div>


        </div>
    </section>

    <script src="{{ asset('styles/JS/dados.js') }}"></script>

    <script>
        $(document).ready(function () {
            //get ID
            $.ajax({
                type: 'POST',
                url: '/dashboard/session',
                dataType: 'JSON',
                success: function (response) {
                    response.forEach((resp) => {
                        console.log(resp.id);
                        $('#getIdSession').val(resp.id);
                        getProjetosByid(resp.id);
                        getChartsGeral(resp.id);
                        getChartUsers();
                        getValorProduto();
                    });
                }
            });
        });

        function getProjetosByid(id) {
            $.ajax({
                type: 'POST',
                url: 'tratamentodados/projetos',
                dataType: 'JSON',
                data: {id: id},
                success: function (response) {
                    $('.filtroProj').remove();
                    response.response.forEach((resp) => {
                        $("#tblprojetos").append
                        (`<tr class="filtroProj">
                            <td> ${resp.id} </td>
                            <td> ${resp.nome} </td>
                            <td> ${resp.situacao} </td>
                            <td> ${resp.descricao} </td>
                        </tr>`);
                    });
                }, error: function (resp) {
                    console.log(resp);
                }
            })
        }

        function getChartsGeral(id) {
            $.ajax({
                type: 'POST',
                url: 'tratamentodados/chartgeral',
                dataType: 'JSON',
                data: {id: id},
                success: function (response) {
                    console.log('GETCHART: ', response.tarefas);
                    chartProjeto(response.count, response.tarefas, response.clientes);
                }, complete: function (resp) {
                    console.log(resp);
                }
            })
        }

        function chartProjeto(count, tarefas, clientes) {
            const data = {
                labels: [
                    'Projetos', 'Tarefas', 'Clientes'
                ],
                datasets: [{
                    label: 'Teste',
                    data: [count, tarefas, clientes],
                    backgroundColor: [
                        'rgb(46,217,78)',
                        'rgb(54, 162, 235)',
                        'rgb(238,39,67)'
                    ],
                    hoverOffset: 4
                }]
            };
            new Chart(document.getElementById('graphPieDadosAdmin'), {
                type: 'doughnut',
                data: data
            });
        }

        function getChartUsers() {
            $.ajax({
                type: 'POST',
                url: 'tratamentodados/colaboradores',
                dataType: 'JSON',
                success: function (response) {
                    console.log('GETCHARTUSER: ', response);
                    chartUsers(response.allUsers, response.allInativos, response.allAtivos);
                }, complete: function (resp) {
                    console.log(resp);
                }
            })
        }

        function chartUsers(all, inativos, ativos) {
            const data = {
                labels: [
                    'Todos', 'Inativos', 'Ativos'
                ],
                datasets: [{
                    label: 'Teste',
                    data: [all, inativos, ativos],
                    backgroundColor: [
                        'rgb(46,217,78)',
                        'rgb(54, 162, 235)',
                        'rgb(238,39,67)'
                    ],
                    hoverOffset: 4
                }]
            };
            new Chart(document.getElementById('graphUsers'), {
                type: 'doughnut',
                data: data
            });
        }

        function getValorProduto(id) {

            new Chart(document.getElementById("bar-chart"), {
                type: 'bar',
                data: {
                    labels: ["Projeto 1", "Projeto 2", "Projeto 3", "Projeto 4", "Projeto 5"],
                    datasets: [
                        {
                            label: "Custo Projetos",
                            backgroundColor: ["#3e95cd", "#2ed94e","#3cba9f","#ee2743","#c45850"],
                            data: [2478,5267,734,784,433]
                        }
                    ]
                },
                options: {
                    legend: { display: false },
                    title: {
                        display: true,
                        text: 'Predicted world population (millions) in 2050'
                    }
                }
            });
        }
    </script>
{% endblock %}


