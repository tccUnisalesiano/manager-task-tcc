{% extends 'base.html.twig' %}
{% block body %}
    {% include 'include/admin_navbar.html.twig' %}
    <section class="home">
        {% include 'include/navbar_top.html.twig' %}
        <div class="container-fluid">
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-lg-6"><h4 class="card-title" id="hidden-label-round-controls">Controladores</h4>
                        </div>
                    </div>
                </div>
{#                <div class="row">#}
{#                    <div class="col-lg-6">#}
{#                        <div class="card">#}
{#                            <div class="card-body" id="container">#}
