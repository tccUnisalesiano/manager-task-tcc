{% extends 'base.html.twig' %}
{% block body %}
    {% include 'include/admin_navbar.html.twig' %}
    <section class="home">
        <h1>CADASTRAR FUNCIONARIO</h1>
        {% block form %}
        {% endblock %}
        <div class="form_cadastro">
            {{form_start(funcionario) }}

            <div class="row_cadastro">
                <div class="column">
                    {{ form_row(funcionario.nomeFuncionario) }}
                </div>
                <div class="column">
                    {{ form_row(funcionario.emailFuncionario) }}
                </div>
            </div>
            <div class="row_cadastro">
                <div class="column">
                    {{ form_row(funcionario.cargaHorariaSemanal) }}
                </div>
                <div class="column">
                    {{ form_row(funcionario.senha) }}
                </div>
            </div>
            <div class="row_cadastro">
                <div class="column">
                    {{ form_row(funcionario.isAdmin) }}
                </div>
                <div class="column">
                    {{ form_row(funcionario.isAtivo) }}
                </div>
            </div>
            <div class="footer">
                <button class="cancel" name="cancel" type="submit" value="Cancel" formnovalidate>Cancelar</button>
                <button class="salvar" type="submit">Salvar</button>
            </div>
            {{ form_end(funcionario) }}
        </div>
    </section>
{% endblock %}


