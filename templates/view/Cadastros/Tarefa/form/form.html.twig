{% extends 'base.html.twig' %}
{% block body %}
    {% include 'include/admin_navbar.html.twig' %}
    <section class="home">
        {% include 'include/navbar_top.html.twig' %}
        <div class="container-fluid">
            <div class="card" >
                <div class="card-header">
                    <h3>Cadastrar Tarefa</h3>
                </div>
                <div class="card-body">
                    {{form_start(tarefa) }}

                    <div class="row">
                        <div class="col-lg-2">
                            {{ form_row(tarefa.idProjeto) }}
                        </div>
                        <div class="col-lg-2">
                            {{ form_row(tarefa.idFuncionario) }}
                        </div>

                        <div class="col-lg-4">
                            {{ form_row(tarefa.prioridade) }}
                        </div>

                        <div class="col-lg-4">
                            {{ form_row(tarefa.situacao) }}
                        </div>

                        <div class="col-lg-4">
                            {{ form_row(tarefa.nome) }}
                        </div>

                        <div class="col-lg-4">
                            {{ form_row(tarefa.status) }}
                        </div>

                        <div class="col-lg-4">
                            {{ form_row(tarefa.tipoTarefa) }}
                        </div>

                        <div class="col-lg-2">
                            {{ form_row(tarefa.porcentagem) }}
                        </div>

                        <div class="col-lg-3">
                            {{ form_row(tarefa.tempoGasto) }}
                        </div>

                        <div class="col-lg-3">
                            {{ form_row(tarefa.tempoEstimado) }}
                        </div>

                        <div class="col-lg-3">
                            {{ form_row(tarefa.dataIni) }}
                        </div>

                        <div class="col-lg-3">
                            {{ form_row(tarefa.dataFim) }}
                        </div>

                        <div class="col-lg-12">
                            {{ form_row(tarefa.descricao) }}
                        </div>
                    </div>
                    <div class="col-lg-12" style="margin-top: 15px !important;">
                        <div class="form-group" style="float: right">
                            <a class="btn btn-danger" href="{{ path('tarefa') }}" >Cancelar</a>
                            <button class="btn btn-success " type="submit" >Salvar</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}


