{% extends 'base.html.twig' %}
{% block body %}
    {% include 'include/admin_navbar.html.twig' %}
    <section class="home">
        {% include 'include/navbar_top.html.twig' %}
        <div class="container-fluid">
            <div class="card">
                <div class="card-header">
                    <h3>Tarefa Detalhes</h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group" style="float: right; margin-right: 26px">
                                <a class="btn btn-primary" href="{{ path('editarTarefa', {id: tarefa.id}) }}">Editar
                                    Tarefa</a>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-3">
                                <label for="projeto">Projeto:</label>
                                <input class="form-control" name="camposInput" title="projeto" value="{{ tarefa.idProjeto.nome }}"
                                       readonly>
                            </div>
                            <div class="col-lg-3">
                                <label for="nome">Nome da Tarefa: </label>
                                <input class="form-control" name="camposInput" title="nome" value="{{ tarefa.nome }}" readonly>
                            </div>
                            <div class="col-lg-3">
                                <label for="Nome Funcionário">Atribuído para:</label>
                                <input class="form-control" title="Nome Funcionário" name="camposInput"
                                       value="{{ tarefa.idUser.nome }}" readonly>
                            </div>
                            <div class="col-lg-3">
                                <label for="prioridade">Prioridade:</label>
                                <input class="form-control" name="camposInput" title="prioridade" value="{{ tarefa.prioridade }}" readonly>
                            </div>
                            <div class="col-lg-3">
                                <label for="tarefa">Tipo Tarefa:</label>
                                <input class="form-control" name="camposInput" title="tarefa" value="{{ tarefa.tipoTarefa }}" readonly>
                            </div>
                            <div class="col-lg-3">
                                <label for="status">Status:</label>
                                <input class="form-control" name="camposInput" title="status" value="{{ tarefa.status }}" readonly>
                            </div>
                            <div class="col-lg-3">
                                <label for="situacao">Situação:</label>
                                <input class="form-control" name="camposInput" title="situacao" value="{{ tarefa.situacao }}" readonly>
                            </div>
                            <div class="col-lg-3">
                                <label for="porcentagem">Porcentagem:</label>
                                <input class="form-control"  name="camposInput" title="porcentagem" value="{{ tarefa.porcentagem }}"
                                       readonly>
                            </div>
                            <div class="col-lg-3">
                                <label for="porcentagem">Tempo Estimado:</label>
                                <input class="form-control"  name="camposInput" title="porcentagem" value="{{ tarefa.tempoEstimado }}"
                                       readonly>
                            </div>
                            <div class="col-lg-3">
                                <label for="porcentagem">Tempo Gasto:</label>
                                <input class="form-control"  name="camposInput" title="porcentagem" value="{{ tarefa.tempoGasto }}"
                                       readonly>
                            </div>
                            <div class="col-lg-3">
                                <label for="DataIni">Data Inicio: </label>
                                <input class="form-control" name="camposInput" title="DataIni"
                                       value="{{ tarefa.dataIni is null ? "" : tarefa.dataIni|date('d/m/Y') }}" readonly>
                            </div>
                            <div class="col-lg-3">
                                <label for="DataFim">Data Fim:</label>
                                <input class="form-control" name="camposInput" title="DataFim"
                                       value="{{ tarefa.dataFim is null ? "" : tarefa.dataFim|date('d/m/Y') }}" readonly>
                            </div>
                            <div class="col-lg-12">
                                <label for="descricao">Descrição:</label>
                                <textarea class="form-control" title="descricao"
                                          readonly>{{ tarefa.descricao }}</textarea>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-12" style="margin-top: 10px !important;">
                        <h4>Tempo Gasto</h4>
                        <hr/>
                    </div>
                    {{ render(url('tempogasto')) }}
                </div>
            </div>
        </div>
    </section>

{% endblock %}


