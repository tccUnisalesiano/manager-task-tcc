{% extends 'base.html.twig' %}
{% block body %}
    {% include 'include/admin_navbar.html.twig' %}
    <section class="home">
        {% include 'include/navbar_top.html.twig' %}
        <div class="container-fluid">
            <div class="card" >
                <div class="card-header">
                    <h3>{{ title }}</h3>
                </div>
                <div class="card-body">
                    {{form_start(cliente)}}

                    <div class="row">
                        <div class="col-lg-4">
                            {{ form_row(cliente.nomeCliente, {'attr': {'class': 'camposInput'}}) }}
                        </div>

                        <div class="col-lg-4">
                            {{ form_row(cliente.tipoCliente, {'attr': {'class': 'camposInput'}}) }}
                        </div>

                        <div class="col-lg-4">
                            {{ form_row(cliente.cpf_cnpj, {'attr': {'class': 'camposInput'}}) }}
                        </div>

                        <div class="col-lg-4">
                            {{ form_row(cliente.emailCliente, {'attr': {'class': 'camposInput'}}) }}
                        </div>

                        <div class="col-lg-4">
                            {{ form_row(cliente.celularCliente, {'attr': {'class': 'camposInput'}}) }}
                        </div>
                    </div>

                    <div class="col-lg-12" style="margin-top: 15px !important;">
                        <div class="form-group" style="float: right">
                            <button class="btn btn-danger" name="cancel" type="submit" value="Cancel" formnovalidate>Cancelar</button>
                            <button class="btn btn-success" type="submit" >Salvar</button>
                        </div>
                    </div>
                    {{ form_end(cliente) }}
                </div>
            </div>
        </div>
    </section>
    <script src="{{ asset('styles/JS/app.js') }}" type="text/javascript"></script>
{% endblock %}


