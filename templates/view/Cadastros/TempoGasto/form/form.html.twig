{% extends 'base.html.twig' %}
{% block body %}
    {% include 'include/admin_navbar.html.twig' %}
    <section class="home">
        {% include 'include/navbar_top.html.twig' %}
        <div class="container-fluid">
            <div class="card">
                <div class="card-header">
                    <h3>Cadastrar Tempo Gasto</h3>
                </div>
                <div class="card-body">
                    {{ form_start(tempogasto) }}
                    <div class="row">
                        <div class="col-lg-3">
                            {{ form_row(tempogasto.idTarefa.nome, {'attr': {'class': 'camposInput'}}) }}
                        </div>

                        <div class="col-lg-3">
                            {{ form_row(tempogasto.idUser.nome, {'attr': {'class': 'camposInput'}}) }}
                        </div>

                        <div class="col-lg-2">
                            {{ form_row(tempogasto.data, {'attr': {'class': 'camposInput'}}) }}
                        </div>

                        <div class="col-lg-2">
                            {{ form_row(tempogasto.atividade, {'attr': {'class': 'camposInput'}}) }}
                        </div>

                        <div class="col-lg-2">
                            {{ form_row(tempogasto.tempo, {'attr': {'class': 'camposInput'}}) }}
                        </div>
                        <div class="col-lg-12">
                            {{ form_row(tempogasto.descricao, {'attr': {'class': 'camposInput'}}) }}
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <div class="form-group" style="float:right; margin-top: 10px;">
                            <button class="btn btn-danger" name="cancel" type="submit" value="Cancel" formnovalidate>
                                Cancelar
                            </button>
                            <button class="btn btn-success " type="submit">Salvar</button>
                        </div>
                    </div>
                </div>
                {{ form_end(tempogasto) }}
            </div>
        </div>
    </section>
{% endblock %}
