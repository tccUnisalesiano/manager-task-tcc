{% extends 'base.html.twig' %}
{% block body %}
    {% include 'include/admin_navbar.html.twig' %}
    <section class="home">
        {% include 'include/navbar_top.html.twig' %}
        <div class="container-fluid">
            <div class="card" >
                <div class="card-header">
                    <h3>{{ title }}</h3>
                </div>
                <div class="card-body">
                        {{form_start(funcionario) }}

                        <div class="row">

                            <div class="col-lg-4">
                                {{ form_row(funcionario.nomeFuncionario, {'attr': {'class': 'camposInput'}}) }}
                            </div>

                            <div class="col-lg-4">
                                {{ form_row(funcionario.emailFuncionario, {'attr': {'class': 'camposInput'}}) }}
                            </div>

                            <div class="col-lg-4">
                                {{ form_row(funcionario.cargaHorariaSemanal, {'attr': {'class': 'camposInput'}}) }}
                            </div>

                            <div class="col-lg-4">
                                {{ form_row(funcionario.senha, {'attr': {'class': 'camposInput'}})  }}
                            </div>

                            <div class="col-lg-4 ">
                                {{ form_row(funcionario.isAdmin, {'attr': {'class': 'camposInput'}}) }}
                            </div>
                            <div class="col-lg-4 ">
                                {{ form_row(funcionario.isAtivo, {'attr': {'class': 'camposInput'}}) }}
                            </div>
                            <div class="col-lg-4 ">
                                <img src="{{ asset('perfil/' ~ registrationForm.imageName()) }}" >
                            </div>
                            <div class="col-lg-4 ">
                                {{ form_row(funcionario.imageFile, {'attr': {'class': 'camposInput'}}) }}
                            </div>


                            <div class="col-lg-12" style="margin-top: 15px !important;">
                                <div class="form-group" style="float: right">
                                    <button class="btn btn-danger" name="cancel" type="submit" value="Cancel" formnovalidate>Cancelar</button>
                                    <button class="btn btn-success " type="submit" >Salvar</button>
                                </div>
                            </div>

                        </div>
                    {{ form_end(funcionario) }}
                </div>
            </div>
        </div>
    </section>
{% endblock %}


