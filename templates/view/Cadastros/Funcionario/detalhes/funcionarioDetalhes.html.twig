{% extends 'base.html.twig' %}
{% block body %}
    {% include 'include/admin_navbar.html.twig' %}
    <section class="home">
        {% include 'include/navbar_top.html.twig' %}
            <div class="container-fluid">
                <div class="card" >
                    <div class="card-header">
                        <h3>Funcionário Detalhes</h3>
                    </div>
                    <div class="card-body">
                    <div class="row">
                        <div class="form-group col-lg-3">
                            <label for="NomeFuncionario">Nome Funcionario</label>
                            <input class="form-control" title="NomeFuncionario" value="{{ funcionario.nomeFuncionario }}" readonly>
                        </div>
                        <div class="form-group col-lg-3">
                            <label for="Email">Email</label>
                            <input class="form-control" readonly value="{{ funcionario.emailFuncionario }}" title="Email">
                        </div>
                        <div class="form-group col-lg-2">
                            <label for="CargaHoraria">Carga Horária Semanal</label>
                            <input class="form-control" readonly title="CargaHoraria" value="{{ funcionario.cargaHorariaSemanal }}">
                        </div>
                        <div class="form-group col-lg-2">
                            <label for="adm">Administrador</label>
                            <input class="form-control" value="{{ (funcionario.isAdmin == 1) ? "Sim" : "Não" }}" readonly title="adm">
                        </div>
                        <div class="form-group col-lg-2">
                            <label for="status">Status</label>
                            <input class="form-control" readonly value="{{ (funcionario.isAtivo == 1) ? "Ativo" : "Desativo" }}" title="status">
                        </div>
                        <div class="col-lg-12 ">
                            <div class="form-group" style="float: right; margin-top: 10px;">
                                <a class="btn btn-primary" href="{{ path('editarFuncionario', {id: funcionario.id}) }}">Editar Funcionário</a>
                            </div>
                        </div>
                    </div>
                    {# espaçamento #}
                    <div class="col-lg-12" style="margin-top: 10px !important;">
                        <h4>Valor Funcionário</h4>
                        <hr/>
                    </div>

                    {{ render(url('valorfuncionario')) }}

