    <script>
        $(document).ready(() => {
            $('#escondeSenha').hide();
        });

        function validaSenhaSave() {
            let newPass = document.getElementById("newpass").value;
            let confPass = document.getElementById("repeatnewpass").value;

            let body = {
                CodUsuario: $('#codUsuario').val(),
                Usuario: $('#usuario').val(),
                Nome: $('#NomeUsuario').val(),
                Email: $('#EmailUsuario').val(),
                Senha: $('#repeatnewpass').val(),
                SenhaAtual: $('#SenhaAtual').val()
            };
            console.log(body);
            if (newPass !== confPass){
                alertmsg("Senha diferente da nova, verifique e tente novamente!");
                return false;
            }

            $.ajax({
                type: "POST",
                url: '/meuPerfil/validaSenha',
                data: body,
                dataType: 'JSON',
                success: (response) => {
                    console.log('SUCCESS: ',response);
                    if (response.resp === 'error') {
                        alertmsg(response.message, 'alert-danger');
                    } else {
                        alertmsg(response.message, 'alert-success');
                        location.reload();
                    }
                },
                error: (xhr) => {
                    console.log('ERROR: ',xhr);
                    console.log(body);
                    alertmsg(xhr.message,'alert-danger');
                    return false;
                }
            });
        }

