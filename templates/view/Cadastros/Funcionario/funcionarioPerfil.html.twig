{% extends 'base.html.twig' %}
{% block body %}
    {% include 'include/admin_navbar.html.twig' %}
    <section class="home">
        {% include 'include/navbar_top.html.twig' %}

        <div class="container py-6">
            <div class="row">
                <div class="col-lg-4">
                    <div class="card mb-4">
                        <div class="card-body text-center">
                            <img src="{{ app.user.imageName is null ? asset('styles/img/no-image.png') : asset('perfil/' ~ app.user.imageName) }}"
                                 alt="avatar"
                                 class="rounded-circle img-fluid" style="width: 150px; height: 150px">
                            <h5 class="my-3">{{ app.user.nome }}</h5>
                            <div class="d-flex justify-content-center mb-2">
                                <br>
                                <button type="button" class="btn btn-primary" data-toggle="modal"
                                        data-target="#imagemModal" style="margin-top: 1rem;">
                                    Editar Imagem
                                </button>
                            </div>
                        </div>
                    </div>
                    <div class="card mb-4 mb-lg-0">
                        <div class="card-body">
                            <p class="mb-4">
                                <h5 class="my-3" style="color: #9212CE">Tarefas</h5>
                            </p>
                            <div id="tarefasProfile">
                                {# append jquery #}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-8">
                    <div class="card mb-4">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0">Nome</p>
                                </div>
                                <div class="col-sm-9">
                                    <p class="text-muted mb-0">{{ app.user.nome }}</p>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0">Email</p>
                                </div>
                                <div class="col-sm-9">
                                    <p class="text-muted mb-0">{{ app.user.email }}</p>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0">Carga Horaria</p>
                                </div>
                                <div class="col-sm-9">
                                    <p class="text-muted mb-0">{{ app.user.cargaHorariaSemanal }} horas</p>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0">Pessoa</p>
                                </div>
                                <div class="col-sm-9">
                                    <p class="text-muted mb-0">{{ app.user.roles == 1 ? "Usu√°rio" : "Administradora" }}</p>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0">Senha</p>
                                </div>
                                <div class="col-sm-9">
                                    <a class="btn btn-success" href="{{ path('app_forgot_password_request') }}">Mudar
                                        Senha</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Modal -->
        <div class="modal fade" id="imagemModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle"
             aria-hidden="true">
            <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-body">
                        {{ form_start(changeImg) }}
                        <div class="col-lg-12">
                            {{ form_row(changeImg.imageFile, {'attr': {'class': 'camposInput'}}) }}
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger" data-dismiss="modal" formnovalidate>Cancelar
                        </button>
                        <button class="btn btn-success " type="submit">Salvar</button>
                    </div>
                    {{ form_end(changeImg) }}
                </div>
            </div>
        </div>
    </section>

    <script>
        $(document).ready(function () {
            $.ajax({
                type: 'POST',
                url: '/dashboard/session',
                dataType: 'JSON',
                success: function (response) {
                    response.forEach((resp) => {
                        console.log(resp.id);
                        $('#getIdSession').val(resp.id);
                        getTarefasByid(resp.id);
                    });
                }
            });
        });

        function getTarefasByid(id) {
            $.ajax({
                type: 'POST',
                url: '/funcionario_perfil/tarefas',
                dataType: 'JSON',
                data: {id: id},
                success: function (response) {
                    response.response.forEach((resp) => {
                        $('#tarefasProfile').append(`<p id="tarefaUser${resp.id}" class="mb-1" style="font-size: 1rem; margin-top: .7rem;">${resp.nome}</p>
                                    <div class="progress rounded" style="height: 5px;">
                                        <div id="barraPorcentagem${resp.id}" class="progress-bar" role="progressbar"
                                                 aria-valuenow="" aria-valuemin="0" aria-valuemax="100" style="width: ${resp.porcentagem}%; background-color: #9212CE;">
                                            <button id="refTarefa${resp.id}" onclick="redirectTarefa(${resp.id})"></button>
                                        </div>
                                    </div>`);
                    })
                }, error: function (resp) {
                    console.log(resp);
                }
            })
        }

        function redirectTarefa(id) {
            $.ajax({
                url: 'tarefa/',id,
                type: 'GET',
                success: function (response) {
                    console.log("LETS GO", response);
                    window.location = '/tarefa/'+id;
                }

            })
        }
    </script>

{% endblock %}



