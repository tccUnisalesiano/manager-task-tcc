{% extends 'base.html.twig' %}
{% block body %}
    {% include 'include/admin_navbar.html.twig' %}
    <section class="home">
        <h1>Cadastrar Tempo Gasto</h1>
        {% block form %}
        {% endblock %}
        <div class="form_cadastro">
            {{form_start(tempogasto) }}

            <div class="row_cadastro">
                <div class="column">
                    {{ form_row(tempogasto.idTarefa) }}
                </div>
                <div class="column">
                    {{ form_row(tempogasto.idFuncionario) }}
                </div>
            </div>
            <div class="row_cadastro">
                <div class="column">
                    {{ form_row(tempogasto.data) }}
                </div>
                <div class="column">
                    {{ form_row(tempogasto.atividade) }}
                </div>
            </div>
            <div class="footer">
                <button class="cancel" name="cancel" type="submit" value="Cancel" formnovalidate>Cancelar</button>
                <button class="salvar" type="submit">Salvar</button>
            </div>
            {{ form_end(tempogasto) }}
        </div>
    </section>
{% endblock %}


